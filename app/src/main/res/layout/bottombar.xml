<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation = "horizontal"
    >


    <LinearLayout
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:background="@drawable/image_1"
        android:id="@+id/tab_bottom_weixin">
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dip"
        android:layout_height="wrap_content"
        android:background="@drawable/image_2"
        android:id="@+id/tab_bottom_friend"
        android:layout_toRightOf="@+id/tab_bottom_weixin">
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dip"
        android:layout_height="wrap_content"
        android:background="@drawable/image_3"
        android:id="@+id/tab_bottom_near"
        android:layout_toRightOf="@+id/tab_bottom_friend">
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dip"
        android:layout_height="wrap_content"
        android:background="@drawable/image_4"
        android:id="@+id/tab_bottom_mine"
        android:layout_toRightOf="@+id/tab_bottom_near">
    </LinearLayout>
</RelativeLayout>